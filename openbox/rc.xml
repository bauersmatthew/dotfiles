<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <placement>
    <center>yes</center>
  </placement>
  <theme>
    <name>CGOB</name>
    <cornerRadius>6</cornerRadius>
    <titleLayout></titleLayout>
  </theme>
  <desktops>
    <number>1</number>
  </desktops>
  <margins>
    <top>103</top>
    <bottom>47</bottom>
    <left>50</left>
    <right>50</right>
  </margins>
  <keyboard>
    <keybind key="Print">
      <action name="Execute">
	    <command>scrot -e 'mv $f ~/Downloads/'</command>
      </action>
    </keybind>
    <keybind key="XF86MonBrightnessUp">
      <action name="Execute">
	    <command>custom_backlight up</command>
      </action>
    </keybind>
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute">
	    <command>custom_backlight down</command>
      </action>
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>amixer -D pulse set Master 7%+</command>
      </action>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
	    <command>amixer -D pulse set Master 7%-</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute">
	    <command>amixer -D pulse set Master toggle</command>
      </action>
    </keybind>
    <keybind key="W-A-Left">
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <width>49%</width>
        <height>100%</height>
      </action>
    </keybind>
    <keybind key="W-A-Right">
      <action name="MoveResizeTo">
        <x>51%</x>
        <y>0</y>
        <width>49%</width>
        <height>100%</height>
      </action>
    </keybind>
    <keybind key="W-Up">
      <action name="MoveResizeTo">
        <y>0</y>
        <height>49%</height>
      </action>
    </keybind>
    <keybind key="W-Down">
      <action name="MoveResizeTo">
        <y>51%</y>
        <height>49%</height>
      </action>
    </keybind>
    <keybind key="W-Left">
      <action name="MoveResizeTo">
        <x>0</x>
        <width>49%</width>
      </action>
    </keybind>
    <keybind key="W-Right">
      <action name="MoveResizeTo">
        <x>51%</x>
        <width>49%</width>
      </action>
    </keybind>
    <keybind key="W-A-Up">
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <width>100%</width>
        <height>100%</height>
      </action>
    </keybind>
    <keybind key="W-A-Down">
      <action name="Iconify"/>
    </keybind>
    <keybind key="W-space">
      <action name="MoveResizeTo">
        <x>10%</x>
        <y>10%</y>
        <width>80%</width>
        <height>80%</height>
      </action>
    </keybind>
    <keybind key="C-W-A-Left">
      <action name="MoveResizeTo">
        <x>7%</x>
        <width>35%</width>
        <y>20%</y>
        <height>60%</height>
      </action>
    </keybind>
    <keybind key="C-W-A-Right">
      <action name="MoveResizeTo">
        <x>57%</x>
        <width>35%</width>
        <y>20%</y>
        <height>60%</height>
      </action>
    </keybind>
    <keybind key="W-BackSpace">
      <action name="Close"/>
    </keybind>
    <keybind key="W-bracketleft">
      <action name="Execute">
        <command>firefox-bin</command>
      </action>
    </keybind>
    <keybind key="W-bracketright">
      <action name="Execute">
        <command>urxvt</command>
      </action>
    </keybind>
  </keyboard>
  <mouse>
    <context name="Client Desktop">
      <mousebind button="Left Right" action="Press">
        <action name="Focus" />
        <action name="Raise" />
        <action name="Unshade" />
      </mousebind>
    </context>
  </mouse>
</openbox_config>
